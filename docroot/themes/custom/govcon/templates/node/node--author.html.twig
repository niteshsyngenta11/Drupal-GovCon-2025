{{ attach_library('govcon/author') }}
{% set author_image = content.field_image[0] ? content.field_image : null %}

{% embed '@templates/author/author.twig' with {
  author_page_title: { value: label },
  author_name: {
    label: 'Name',
    first_name: content.field_first_name,
    last_name: content.field_last_name
  },
  author_image: author_image,
  author_image_alt: content.field_first_name,
  author_job_title: { label: content.field_job_title['#title'], value: content.field_job_title },
  author_site_link: { label: content.field_website['#title'], value: content.field_website[0]['#title'] },
  author_bio: { value: content.field_bio[0]['#text'] }
} %}
{% endembed %}
