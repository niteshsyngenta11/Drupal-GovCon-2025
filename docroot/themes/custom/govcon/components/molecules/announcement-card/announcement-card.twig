<div class="announcement-card bg-skyblue d-flex p-32 border-radius-xxs justify-between flex-column">
  <h3 class="mb-4">
    {{ title }}
  </h3>
  {% if date %}
    <p class="mb-0">
      {{ date }}
    </p>
  {% endif %}
  <hr class="has-text-color has-primary-color has-primary-background-color has-background my-16" />
  {% if description %}
    <div class="announcement-description">
      {{ description }}
    </div>
  {% endif %}
  {% if link %}
    {% set additional_classes = "" %}

    {% include "@atoms/button/button.twig" with {
      link_url: link.url,
      link_target: link.target,
      link_content: link.content,
      modifier: "button-with-icon icon--arrow-right icon-after text-cobalt " ~ link.classes 
    } %}
  {% endif %}
</div>
