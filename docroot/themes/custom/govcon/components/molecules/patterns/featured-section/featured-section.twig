<div class="">
  <div class="wp-block-group featured-section is-layout-constrained wp-block-group-is-layout-constrained">
    <div class="wp-block-group__inner-container">
      <div class="wp-block-columns">
        <div class="wp-block-column" style="flex-basis:67.6%">
          <div class="wp-block-group has-dark-background-color has-background is-vertical is-layout-flex wp-container-core-group-layout-3 wp-block-group-is-layout-flex" style="border-radius:4px;padding-top:var(--wp--preset--spacing--30);padding-right:var(--wp--preset--spacing--30);padding-bottom:var(--wp--preset--spacing--30);padding-left:var(--wp--preset--spacing--30)">
            <h2 class="wp-block-heading m-0 has-light-color has-text-color has-link-color">Featured Sessions</h2>
            {% include "@molecules/patterns/card/featured-card/featured-card.twig" %}
            {% include "@molecules/patterns/card/featured-card/featured-card.twig" %}
            <p class="m-0 has-light-color has-text-color has-link-color">
              <a href="#" class="text-light">View all sessions</a>
            </p>
          </div>
        </div>


        <div class="wp-block-column" style="flex-basis:28%">
          <div class="views-element-container wp-block-drupalblock-views-block-announcements-recent-announcement">
            <div>
              <div class="announcement-card-row d-flex flex-column gap-32">
                {% for announcement in announcements %}
                  {% include "@molecules/announcement-card/announcement-card.twig" with {
                    title: announcement.title,
                    date: announcement.date,
                    description: announcement.description,
                    link: announcement.link
                  } %}
                {% endfor %}
                {# View all announcements #}
                {% if allAnnouncement %}
                  {% set allAnnouncement_links_classes = ["mb-0", "all-announcement-link", "body-text"] %}
                  {% include "@atoms/link/link.twig" with {
                    link_url: allAnnouncement.url,
                    link_title: allAnnouncement.title,
                    link_target: allAnnouncement.target,
                    link_content: allAnnouncement.content,
                    link_classes: allAnnouncement.classes|merge(allAnnouncement_links_classes)
                  } %}
                {% endif %}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>